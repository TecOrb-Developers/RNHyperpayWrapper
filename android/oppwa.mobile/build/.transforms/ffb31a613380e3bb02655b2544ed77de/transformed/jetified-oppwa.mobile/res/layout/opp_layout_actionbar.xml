<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/headerBackground"
    android:paddingLeft="10dp"
    android:paddingTop="14dp"
    android:paddingRight="10dp"
    android:paddingBottom="14dp"
    android:gravity="center_vertical"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/close_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="?attr/cancelButtonDrawable"
        android:background="@drawable/opp_btn_selector_actionbar"
        android:tint="?attr/cancelButtonTintColor"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/close_button"
        android:layout_toStartOf="@id/close_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_button"
            android:src="@drawable/arrow_back"
            android:background="@drawable/opp_btn_selector_actionbar"
            android:tint="?attr/cancelButtonTintColor"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.oppwa.mobile.connect.checkout.dialog.view.CheckoutTextView
            android:id="@+id/title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/checkoutTitleTextViewStyle"/>

    </LinearLayout>

</RelativeLayout>