<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/store_payment_info_checkbox"
        app:buttonTint="?attr/checkboxButtonTintColor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <com.oppwa.mobile.connect.checkout.dialog.view.CheckoutTextView
        android:textSize="@dimen/checkout_input_layout_text_size"
        android:text="@string/checkout_tokenization_checkbox"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="?attr/checkoutTextViewStyle"/>

</LinearLayout>